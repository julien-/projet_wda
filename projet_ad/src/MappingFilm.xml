<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
							"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
							
<hibernate-mapping>
	<class name="metier.Film" table="film" lazy="false">
		<id name="_id" type="int" column="id_film">
			<generator class="native"/>
		</id>
	    <set name="_notes" table="notes_film" inverse="true"
			lazy="true" fetch="select" cascade="all">
    		<key column="id_film_note" not-null="true" />
        	<one-to-many class="metier.Note" />
    	</set>
		<property name="_titre" column="titre_film" type="string" not-null="true"/>
		<property name="_anneesortie" column="annee_film" type="int" not-null="true"/>
		<property name="_cout" column="cout_film" type="double" not-null="true"/>
		<property name="_photoaffiche" column="photo_film" type="string" not-null="false"/>
		<property name="_confirme" column="confirme" type="int" not-null="false"/>
		<set name="realisateurs" table="realisateur_film"
            inverse="true" lazy="false" fetch="select" cascade="all">
            <key column="id_film_film" />
            <many-to-many column="id_realisateur_film" class="metier.Realisateur" />
        </set>
      	<set name="acteurs" table="acteur_film"
            inverse="true" lazy="false" fetch="select" cascade="all">
            <key column="id_film_film" />
            <many-to-many column="id_acteur_film" class="metier.Acteur" />
        </set>
	</class>
</hibernate-mapping>